<main role="main">

      <!-- Main jumbotron for a primary marketing message or call to action -->
      <div class="jumbotron">
        <div class="container">
          <h1 class="display-3 text-center">Bienvenue sur My-social-events</h1>
        </div>
      </div>

      <div class="container">
        <!-- Example row of columns -->
        <div class="row">

          <% @events.each do |event| %>
          <div class="col-md-4">
            <h2>
              <%= event.title %>
            </h2>
            <p>
              <%= event.description %>
            </p>
            <p>
              <%= link_to "Voir details »", event_path(event.id), class: 'btn btn-secondary', method: :get %>
              <!-- <a class="btn btn-secondary" href="#" role="button">Voir details »</a> -->
            </p>
          </div>
          <% end %>
        </div>

        <hr>

      </div> <!-- /container -->

    </main>